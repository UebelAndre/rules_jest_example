{
    "compilerOptions": {
        "allowJs": false,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "esnext"
        ],
        "module": "CommonJS",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "target": "ES6"
    },
    "exclude": [
        "node_modules",
    ]
}
